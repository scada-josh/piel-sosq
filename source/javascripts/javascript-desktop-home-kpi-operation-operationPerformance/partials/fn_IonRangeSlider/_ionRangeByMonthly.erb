  $("#ionRangeByMonth").ionRangeSlider({
    type: "double",
    values: ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug", "Sep", "Oct", "Nov", "Dec"],
    grid: true,
    onStart: function (data) {
      // console.log(data);

        var start_month_val = data.from_value;
        var end_month_val = data.to_value;


        var optionSelected = $('#year_selected_id').find("option:selected");
        var valueSelected  = optionSelected.val();
        var textSelected   = optionSelected.text();


        var start_date_of_month = moment().year(valueSelected).months(data.from).startOf('month');
        var end_date_of_month = moment().year(valueSelected).months(data.to).endOf("month");
        // console.log(start_month.format('DD/MM/YYYY'));
        // console.log(end_month.format('DD/MM/YYYY'));

        // fn.ShowRangeDate(start_month, end_month);
